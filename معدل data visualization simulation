        }
        
        /* Hover على بطاقة الخيار الموحدة */
        .option-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
            border-color: #3b82f6;
        }
        
        /* حالة التحديد */
        .option-card.selected {
            border-color: #3b82f6 !important;
            background-color: rgba(59, 130, 246, 0.2) !important;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3); /* ظل داخلي للتحديد */
        }

        /* عنوان الخيار */
        .option-card h3 {
            color: #60a5fa;
            margin-top: 0;
            margin-bottom: 0.5rem;
            font-weight: 600;
            font-size: 1.1rem;
        }
        
        /* وصف الخيار */
        .option-card p {
            margin: 0;
            color: #9ca3af;
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        /* الرسم البياني */
        .chart-container {
            position: relative;
            height: 500px; /* زيادة ارتفاع المخطط قليلاً */
            margin: 2rem 0;
            padding: 1.5rem;
            background-color: #111827;
            border-radius: 0.75rem;
            border: 1px solid #374151;
        }
        
        /* عناصر التحكم (الأزرار) */
        .controls {
            display: flex;
            gap: 1.5rem;
