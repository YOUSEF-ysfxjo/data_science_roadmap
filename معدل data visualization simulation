    <div class="dashboard-container">
        <!-- زر العودة -->
        <a href="data_analysis_visual_simulation.html" class="back-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            العودة إلى صفحة المحاكاة
        </a>

        <h1>محاكاة التصور البياني</h1>
        
        <div class="simulation-area">
            <h2>اختر نوع الرسم البياني المناسب</h2>
            <p class="text-gray-400 mb-6">المهمة: قم بتمثيل ومقارنة القيم الزمنية المنفصلة (المبيعات الشهرية) واكتشاف أنسب مخطط لهذا النوع من البيانات.</p>
            
            <div class="chart-options">
                <div class="option-card selected" data-chart="bar">
                    <h3>مخطط أعمدة (Bar)</h3>
                    <p>أفضل لمقارنة قيم الفئات المنفصلة (مثل مبيعات كل شهر على حدة).</p>
                </div>
                <div class="option-card" data-chart="line">
                    <h3>مخطط خطي (Line) </h3>
                    <p>أفضل لعرض الاتجاهات والتغير المستمر عبر الزمن (مثل مسار التغير في المبيعات).</p>
                </div>
                <div class="option-card" data-chart="pie">
                    <h3>مخطط دائري (Pie)</h3>
                    <p>أفضل لعرض النسب المئوية وحصة كل جزء من الكل (مثل حصة كل شهر من إجمالي المبيعات السنوية).</p>
                </div>
                <div class="option-card" data-chart="scatter">
                    <h3>مخطط مبعثر (Scatter)</h3>
                    <p>أفضل لعرض العلاقة (الارتباط) بين متغيرين رقميين (مثل العلاقة بين السعر والطلب).</p>
                </div>
            </div>

            <div class="chart-container">
                <canvas id="dataChart"></canvas>
            </div>
            
            <div class="controls">
                <button id="applyChart" class="btn btn-primary" data-chart="bar">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    تطبيق الرسم البياني المختار
                </button>
                <button id="resetChart" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 0014.155 3.197m0 0v-2.1m0 2.1l1.75.952m-2.28 12.053l1.52.833m-1.52-.833l-.76.417M12 21h7.828A2 2 0 0021 19V5a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2h3.5" />
                    </svg>
                    إعادة تعيين إلى الافتراضي
                </button>
            </div>
        </div>
    </div>

    <script>
        // بيانات المبيعات الشهرية
        const salesData = {
            labels: ['يناير', 'فبراير', 'مارس', 'أبريل', 'مايو', 'يونيو'],
            datasets: [{
                label: 'مبيعات 2023', // تم إزالة "بآلاف الدولارات"
                data: [65, 59, 80, 81, 56, 55],
                // ألوان متناسقة للدارك مود
                backgroundColor: [
                    'rgba(59, 130, 246, 0.7)', /* أزرق */
                    'rgba(249, 115, 22, 0.7)', /* برتقالي */
                    'rgba(16, 185, 129, 0.7)', /* أخضر */
                    'rgba(239, 68, 68, 0.7)', /* أحمر */
                    'rgba(147, 51, 234, 0.7)', /* بنفسجي */
                    'rgba(251, 191, 36, 0.7)' /* أصفر */
                ],
                borderColor: [
                    'rgba(59, 130, 246, 1)',
                    'rgba(249, 115, 22, 1)',
                    'rgba(16, 185, 129, 1)',
                    'rgba(239, 68, 68, 1)',
                    'rgba(147, 51, 234, 1)',
                    'rgba(251, 191, 36, 1)'
                ],
                borderWidth: 1,
                tension: 0.3 // لخطوط أكثر سلاسة
            }]
        };

        // العناصر
        const ctx = document.getElementById('dataChart').getContext('2d');
        const applyButton = document.getElementById('applyChart');
        const resetButton = document.getElementById('resetChart');
        
        let chart;
        
        // إعدادات المخطط الأساسية
        const baseOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top',
                    rtl: true,
                    labels: {
                        font: { family: 'Tajawal', size: 14 },
                        color: '#9ca3af'
                    }
                },
                tooltip: {
                    rtl: true,
                    titleFont: { family: 'Tajawal' },
                    bodyFont: { family: 'Tajawal' }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'قيمة المبيعات',
                        color: '#9ca3af',
                        font: { family: 'Tajawal', weight: 'bold' }
                    },
                    grid: { color: 'rgba(255, 255, 255, 0.1)' },
                    ticks: { color: '#9ca3af', font: { family: 'Tajawal' } }
                },
                x: {
                    title: {
                        display: true,
                        text: 'الأشهر',
                        color: '#9ca3af',
                        font: { family: 'Tajawal', weight: 'bold' }
                    },
                    grid: { display: false },
                    ticks: { color: '#9ca3af', font: { family: 'Tajawal' } }
                }
            }
        };

        // دالة لتهيئة الرسم البياني
        function initializeChart(type = 'bar') {
            if (chart) {
                chart.destroy();
            }

            // يتم نسخ البيانات في كل مرة للتأكد من تحديث خاصية التسمية (Label) في كل مرة
            let currentData = JSON.parse(JSON.stringify(salesData)); 
            let currentOptions = JSON.parse(JSON.stringify(baseOptions)); 
            
            // تعديل الخيارات حسب نوع المخطط
            if (type === 'pie' || type === 'doughnut') {
                currentOptions.scales = {}; // المخططات الدائرية لا تستخدم محاور
            } else if (type === 'line') {
                // للمخطط الخطي، نحتاج إلى تغيير الحدود ليكون خطاً بدلاً من أعمدة
                currentData.datasets[0] = {
                    ...currentData.datasets[0],
                    backgroundColor: currentData.datasets[0].borderColor[0], // لون التعبئة
                    borderColor: currentData.datasets[0].borderColor[0], // لون الخط
                    fill: false,
                    pointBackgroundColor: currentData.datasets[0].borderColor, // ألوان النقاط
                    borderWidth: 2
                };
            } else if (type === 'scatter') {
                // للمخطط المبعثر، نحتاج إلى متغيرين
                currentData.datasets[0] = {
                    label: 'العلاقة بين ترتيب الشهر والقيمة', // تسمية جديدة للمخطط المبعثر
                    data: salesData.datasets[0].data.map((value, index) => ({ x: index + 1, y: value })),
                    backgroundColor: 'rgba(59, 130, 246, 0.8)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    pointRadius: 6,
                    pointHoverRadius: 8
                };
                currentOptions.scales.x.title.text = 'ترتيب الشهر';
            }

            chart = new Chart(ctx, {
                type: type,
                data: currentData,
                options: currentOptions
            });
        }

        // تحديد البطاقة الافتراضية عند التحميل
        function selectCard(chartType) {
            document.querySelectorAll('.option-card').forEach(c => {
                c.classList.remove('selected');
            });
            const selected = document.querySelector(`.option-card[data-chart="${chartType}"]`);
            if (selected) {
                selected.classList.add('selected');
                applyButton.setAttribute('data-chart', chartType);
            }
        }


        // *******************
        // معالجات الأحداث
        // *******************

        // إضافة تأثيرات عند اختيار نوع الرسم البياني
        document.querySelectorAll('.option-card').forEach(card => {
            card.addEventListener('click', function() {
                const chartType = this.getAttribute('data-chart');
                selectCard(chartType);
            });
        });

        // تطبيق تغيير الرسم البياني
        applyButton.addEventListener('click', function() {
            const chartType = this.getAttribute('data-chart');
            if (chartType) {
                initializeChart(chartType);
            }
        });

        // إعادة تعيين الرسم البياني
        resetButton.addEventListener('click', function() {
            // إعادة تعيين التحديد إلى الافتراضي (Bar Chart)
            selectCard('bar');
            
            // إعادة تعيين الرسم البياني إلى الافتراضي
            initializeChart('bar');
        });

        // التهيئة الأولية عند تحميل الصفحة
        window.onload = function() {
            initializeChart('bar');
        };
    </script>
</body>
</html>
